<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Brand / Accent -->
  <Color x:Key="AccentColor">#4C8BF5</Color>
  <Color x:Key="AccentHoverColor">#3A76E6</Color>
  <Color x:Key="AccentPressedColor">#2E63C7</Color>

  <!-- Neutrals -->
  <Color x:Key="NeutralBgColor">#F3F4F6</Color>
  <Color x:Key="NeutralHoverColor">#E5E7EB</Color>
  <Color x:Key="NeutralBorderColor">#D1D5DB</Color>
  <Color x:Key="TextPrimaryColor">#111827</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
  <SolidColorBrush x:Key="AccentBrushHover" Color="{StaticResource AccentHoverColor}" />
  <SolidColorBrush x:Key="AccentBrushPressed" Color="{StaticResource AccentPressedColor}" />
  <SolidColorBrush x:Key="NeutralBgBrush" Color="{StaticResource NeutralBgColor}" />
  <SolidColorBrush x:Key="NeutralHoverBrush" Color="{StaticResource NeutralHoverColor}" />
  <SolidColorBrush x:Key="NeutralBorderBrush" Color="{StaticResource NeutralBorderColor}" />
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
</ResourceDictionary>
