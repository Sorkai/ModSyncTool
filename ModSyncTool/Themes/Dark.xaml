<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- 深色主题 -->
  <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1F22" />
  <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1E1F22" />
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F3F4F6" />
  <SolidColorBrush x:Key="NeutralBgBrush" Color="#2A2B2F" />
  <SolidColorBrush x:Key="NeutralHoverBrush" Color="#34363B" />
  <SolidColorBrush x:Key="NeutralBorderBrush" Color="#3F4247" />

  <Style TargetType="Window">
    <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
  </Style>

  <!-- 覆盖 TextBox 在暗色主题下的外观 -->
  <Style TargetType="TextBox">
    <Setter Property="Foreground" Value="#F3F4F6" />
    <Setter Property="Background" Value="#2A2B2F" />
    <Setter Property="BorderBrush" Value="#3F4247" />
  </Style>
</ResourceDictionary>
